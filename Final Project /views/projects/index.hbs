{{!-- Adding table to show data --}}


{{!-- Each record will have action button to edit/delete --}}
<table>
    <thead>
        <th>Recipe Type</th>
        <th>Recipe Name</th>
        <th>Main Ingredients</th>
        <th></th>
    </thead>
    <tbody>
        {{!-- Showing elements from database --}}
        {{#each dataset}}
            <tr>
                <td>{{this.recipeType}}</td>
                <td>{{this.recipeName}}</td>
                <td>{{this.ingredients}}</td>
                <td></td>
            </tr>
        {{/each}}


    </tbody>
</table>